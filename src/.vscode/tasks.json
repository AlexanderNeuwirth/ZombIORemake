{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsCompile",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "Build",
            "dependsOn": "tsCompile",
            "type": "shell",
            "command":"${workspaceFolder}/copyFiles.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}