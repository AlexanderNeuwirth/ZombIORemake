    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "program": "${workspaceFolder}/output/server/src/server.js",
            "preLaunchTask": "Build"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Client",
            "url": "localhost:5001",
            "webRoot": "${workspaceFolder}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Benchmark Tests",
            "program": "${workspaceFolder}/output/server/src/utilityObjects/Benchmarking.js",
            "preLaunchTask": "Build",
            "console": "externalTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Run Game",
            "configurations": ["Launch Client","Launch Server"]
        }
    ]
}